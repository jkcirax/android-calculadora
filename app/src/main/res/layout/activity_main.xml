<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="101dp"
            android:layout_height="33dp"
            android:text="Primeiro Valor"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editText6Valor2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="153dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:text="Segundo Valor"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="110dp" />

        <EditText
            android:id="@+id/editTextValor1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="49dp" />

        <EditText
            android:id="@+id/editText7Resultado"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="379dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSomar"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="+"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button2Subtrair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button4Dividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="293dp" />

            <Button
                android:id="@+id/button3Multiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="293dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>